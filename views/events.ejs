<style>
    .big {
        font-size: 22px !important;
        font-weight: 400 !important;
    }

    #blog-content-preview img {
        width: 100%;
    }

    #blog-preview {
        padding: 55px 0px;
        position: relative;
        width: 100%;
        /* min-height: 200vh; */
    }

    .blog-title {
        font-size: 32px;
        margin: 0px 0px 0px 0px;
        font-weight: 300;
    }

    .byline {
        padding-bottom: 40px !important;
        font-weight: 400;
    }

    .category a:hover {
        text-decoration: none;
        color: #4eaac8;
    }

    .category a {
        font-size: 12px;
        text-transform: uppercase;
        color: black;
        font-weight: 300;
        display: inline-block;
    }

    .contact-form-box {
        padding: 10px;
        color: black !important;
        margin-top: 50px;
        background: whitesmoke;
        margin-bottom: 100px;
    }

    .contact-form-box .section-title {
        color: black !important;
    }

    .dot {
        color: #4eaac8;
        font-size: 26px;
        line-height: 5px;
    }

    .event_image {
        width: 100%;
        margin-top: 10px;
    }
    
    hr {
        margin: 0px;
    }

    .main-image img {
        width: 100%;
    }

    #outputBlog img {
        width: 100% !important;
        margin-top: 25px!important;
    }


    #posts {
        margin-bottom: 100px;
    }

    .read-more a:hover {
        text-decoration: none;
        color: #4eaac8;
    }

    .read-more a {
        color: #4eaac8;
    }

    .read-more {
        margin-top: 10px;
        margin-bottom: 25px;
    }

    .tags {
        list-style: none;
    }
</style>

<%- include('./partials/global/header.ejs') -%>
    <div class='hide-on-mobile'>
        <%- include('./partials/global/topbar.ejs') -%>
            <%- include('./partials/global/navtop.ejs') -%>
    </div>
    <%- include('./partials/global/navbar.ejs') -%>
        <div id='blog-preview'>
            <div class='container'>
                <div class='sub-title center'></div>
                <div class='section-title center'>Events</div>
                <div class='center'>
                    <hr class='short'>
                </div>
            </div>
            <div class='container'>
                <div class='row'>
                    <% event.forEach(function(events){ %>
                        <div class='col-lg-5'><img src='./images/uploads/<%= events.preview_image %>' class='event_image' alt='Event preview'></div>
                        <div class='col-lg-7'><div class='blog-title'><%= events.name %></div>
                        <hr style='width: 30%;'>
                        
                        <b>Date:</b> <%= events.date %><br>
                        <b>Start Time: </b> <%= events.start_time %><br>
                        <b>End Time:</b> <%= events.end_time %>
                        <div class='read-more'><a href='/showevent/<%= events.id %>'>Details</a></div>
                        </div>
                        <!-- Description: <%= events.description %> -->
                        

                    <% }) %>
                        </div> 
                    </div>
                </div>
            </div>
        </div>


        <%- include('./partials/global/footer.ejs') -%>

            </div>