 <script src="../ckeditor/ckeditor.js"></script>
    <div id='new-post'>
        <div class='container'>

            <div class='section-title'>New Blog Post</div>
            <form class="form" action='/new' enctype="multipart/form-data" method='POST'>
                <div class='form-group'>
                    <div class="field">
                        <input type='text' class='form-control' id='title' name='title' placeholder='Post Title'>
                    </div>
                    <div class="field">
                        <input type='text' class='form-control' id='author' name='author' placeholder='Author'>
                    </div>
                    <div class="field">
                        <input type='date' class='form-control' id='date' name='date'>
                    </div>
	    			<div class="field">
                            <p>Upload Main Image</p>
                            <input type="file" name="preview_image" accept="image/*" />
                        </div>
            
					<br>
					
                    <div class="field">
						<label>Blog Content</label>
                        <textarea type='text' rows='20' class='form-control' id='editor' name='content' placeholder='Content'></textarea>
                    </div>
                    <div class='form-group'>
			<label>Category</label><br>
			<select class='form-control' name='category' style='width: 30%'>
				<% category.forEach(function(category){ %>
				<option value='<%= category.category_name %>'><%= category.category_name %></option>
				<% }) %>
			</select>
                    </div>
                    <% if (role === 'admin'){ %>
                    <div class="field">
                        <label>Draft</label>
                        <select type='text' class='form-control' id='draft' name='draft'>
                            <option value='Yes'>Yes</option>
                            <option value='No'>No</option>
                        </select>
                    </div>
                    <% } else { %>
                        <div class="field">
                            <label>Draft</label>
                            <select type='text' class='form-control' id='draft' name='draft'>
                                <option value='Yes'>Yes</option>
                            </select>
                        </div>
                        <% } %>
                </div>
                <button type="submit">Submit Post</button>
            </form>
        </div>
    </div>


