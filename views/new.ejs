	<%- include('./partials/global/navbar.ejs') -%>
	<%- include('./partials/scroll.ejs') -%>

    <style>
        #new-post {
            padding: 55px 0px;
        }

        input, textarea {
            margin: 25px 0px;
        }

    </style>
    <div id='new-post'>
        <div class='container'>
            <div class='section-title'>New Blog Post</div>
            <form class="form" action='/new' method='POST'>
                <div class='form-group'>
                    <div class="field">
                        <input type='text' class='form-control' id='title' name='title' placeholder='Post Title'>
                    </div>
                    <div class="field">
                        <input type='text' class='form-control' id='preview_image' name='preview_image' placeholder='Preview Image URL'>
                    </div>
                    <div class="field">
                        <input type='text' class='form-control' id='preview_content' name='preview_content' placeholder='Preview Content'>
                    </div>
                    <div class="field">
                        <textarea type='text' rows='10' class='form-control' id='content' name='content' placeholder='Content'></textarea>
                    </div>
                </div>
                <button type="submit">Submit Post</button>
            </form>
        </div>
    </div>



