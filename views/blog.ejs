<style>
#blog-preview {
    padding: 55px 0px;
}

.blog-title {
    font-size: 32px;
    margin: 20px 0px;
    font-weight: 300;
}

.preview-image img {
    width: 100%;
}

.read-more a:hover {
    text-decoration: none;
    color: #4eaac8;
}

.read-more a {
    color: #4eaac8;
}

.read-more {
    margin-top: 10px;
}

</style>

<%- include('./partials/global/header.ejs') -%>
<div class='hide-on-mobile'>
	<%- include('./partials/global/topbar.ejs') -%>
	<%- include('./partials/global/navtop.ejs') -%>
</div>
<%- include('./partials/global/navbar.ejs') -%>
<div id='blog-preview'>
    <div class='container'>
        <div class='section-title center'>Blog and News</div>
        <br>
        <div class='row'>
            <div class='col-lg-3'>
                  <div class="input-group mb-3">
                    <input type="text" class="form-control"  placeholder='Search' aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary" type="button" style='background: #4eaac8'><i class="fas fa-search" style='color: white'></i></button>
                    </div>
                  </div>
            </div>
            <div class='col-lg-9'>
                <% post.forEach(function(post){ %>
                    <div class='preview-image'><img src='<%= post.post_preview_image %>'></div>
                    <div class='blog-title'><%= post.post_title %></div>
                    <div class='blog-preview section-text'><%= post.post_preview_content %></div>
                    <div class='read-more'><a href='#'>Read More</a></div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/global/footer.ejs') -%>
